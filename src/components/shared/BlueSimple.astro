---
import PrimaryButton from '@components/buttons/PrimaryButton.astro'
import TextField from '@components/contact/TextField.astro'

interface CustomProps {
  headline: string
  p1: string
  p2?: string
  p3?: string
  p4?: string
  p5?: string
}

type Props = CustomProps

const {
  headline,
  p1,
  p2,
  p3,
  p4,
  p5,
  ...attrs
} = Astro.props

---

<section class="bg-dark-900 px-4 py-12 sm:px-6 md:py-16 lg:px-8">
  <div class="mx-auto max-w-screen-md lg:max-w-screen-xl">
    <div class="flex w-full justify-center">
      <h1 class=" text-white text-3xl font-bold " >
        {headline}
      </h1>
    </div>
    {/* Project description */}
    <div class="mx-auto mt-6 flex w-full flex-wrap">
      <div class="mx-auto w-full">
        <p class="text-2xl mb-6 font-thin tracking-tight text-white lg:leading-tight">
          {p1}
        </p>
        {p2 && (
          <p class="text-2xl mb-6 font-thin tracking-tight text-white lg:leading-tight">
            {p2}
          </p>
        )}
        {p3 && (
          <p class="text-2xl mb-6 font-small tracking-tight text-white lg:leading-tight">
            {p3}
          </p>
        )}
        {p4 && (
          <p class="text-2xl mb-6 font-small tracking-tight text-white lg:leading-tight">
            {p4}
          </p>
        )}
        {p5 && (
          <p class="text-2xl mb-6 font-small tracking-tight text-white lg:leading-tight">
            {p5}
          </p>
        )}
      </div>
    </div>
  </div>
</section>