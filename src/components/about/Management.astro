  'Security Officers are provided with either or both, company cell phones or radios, allowing Supervisors and Management instant communicative availability.'

const l5 =
  'Client communication with Supervisors and Management available 24/7/365'
---

{/* White Section - Mission Statement*/}
<section class="relative overflow-hidden bg-dark-900 py-12 md:py-16">
  <video
    autoplay
    loop
    muted
    class="absolute min-h-full w-auto min-w-full max-w-none"
  >
    <source src={videobg} type="video/mp4" />
     Your browser does not support the video tag.
  </video>
  <div
    class="relative z-[3] mx-auto mt-12 max-w-screen-md rounded-3xl bg-dark-900/90 p-16 backdrop-blur-md lg:max-w-screen-xl "
  >
    <div class="flex w-full justify-center">
      <h1 class="text-3xl font-bold text-white">MANAGEMENT</h1>
    </div>
    {/* Project description */}
    <div class="mx-auto mt-6 grid w-full gap-12 grid-cols-2">
      <div class="">
        <p
          class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify anim-left"
        >
          {t1}
        </p>
        <p
          class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify"
        >
          {t2}
        </p>
        <p
          class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify"
        >
          {t3}
        </p>
      </div>
      <div class="">
        <p
          class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify"
        >
          {t4}
        </p>
          <ol
            class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify"
          >
            <li>1.- {l1}</li>
            <li>2.- {l2}</li>
            <li>3.- {l3}</li>
            <li>4.- {l4}</li>
            <li>5.- {l5}</li>
          </ol>
          <p
          class="mb-6 text-lg font-normal tracking-tight text-white lg:leading-tight text-justify"
        >
          {t5}
        </p>
        
      </div>
    </div>
  </div>
</section>



<style>
  .anim-left {
    view-timeline: --animReveal block;
    animation-timeline: --animReveal;
  
    animation-name: fadein-left;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }

  .anim-right {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein-right;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }

  .anim-center {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein-center;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 15% cover 60% ;
  }
  .anim {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }
  
  @keyframes fadein-left {
  from {
    opacity: 0;
    transform: translateX(-300px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadein-right {
  from {
    opacity: 0;
    transform: translateX(300px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadein-center {
  from {
    opacity: 0;
    transform: translateY(40px);
    
  }

  to {
    opacity: 1;
    transform: translateY(0);
    
  }
}

@keyframes fadein {
  from {
    opacity: 0;
    transform: scale(0.5);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}


  
  </style>