---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon'
import portraitImage from '@images/stock/uniform.jpg'
import squareImage1 from '@images/stock/agent.jpg'
import squareImage2 from '@images/stock/dispatcher.jpg'
import portraitImage2 from '@images/stock/agent2.jpg'
import squareImage3 from '@images/stock/investigation.jpg'
import squareImage4 from '@images/stock/car.jpg'

const services = [
  {
    label: 'Security solutions',
    description:
      'We monitor our actions with supervision, and routinely follow up to ascertain if in fact, the threat has been eliminated or if it continues to be viable.',
    icon: 'artboard',
    link: '',
  },
  {
    label: 'Investigative services',
    description:
      'National 50 Security office is staffed with professional state licensed investigators. All of our investigators have prior law enforcement experience and oversee each individual investigation assignment.',
    icon: 'code',
    link: '',
  },
  {
    label: 'Specialized  services',
    description:
      'We can provide, private investigation services that include civil process service, as well as criminal investigations, mobile and stationary surveillance capabilities and home and business protection with armed or unarmed personnel',
    icon: 'tool',
    link: '',
  },
]

const services2 = [
  {
    label: 'Mobile patrol services',
    description:
      'Consists of private vehicle patrol, bicycles or golf Carts that never leave your property, except for fuel and maintenance and will not be used at any other location.',
    icon: 'artboard',
    link: '',
  },
  {
    label: 'Command and control',
    description:
      'This office provides dedicated and trained professional security personal in all areas under the above heading.',
    icon: 'code',
    link: '',
  },
  {
    label: 'Locations we service',
    description:
      'Discover the versatility of our services tailored to various industries and locations. From bustling office buildings to dynamic production sets, we cater to a wide range of businesses and events across different sectors.',
    icon: 'tool',
    link: '',
  },
]
---

<section class="bg-dark-800 px-4 py-10 sm:px-6 md:py-12 lg:px-8">
  {/* Section text */}
  <div
    class="mx-auto max-w-xl text-center md:max-w-2xl lg:max-w-screen-xl lg:text-left"
  >
    <p
      class="inline-flex items-center justify-center rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700 px-6 py-2 text-sm font-medium tracking-wide text-white"
    >
      What we do
    </p>
    <div class="mt-6 grid w-full gap-6 lg:grid-cols-5">
      <div class="lg:col-span-3">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl md:text-5xl">
          National 50 Security and Investigations Inc.â€™ solutions to security needs are fundamental. 
        </h2>
      </div>
      <div class="lg:col-span-2">
        <p class="text-xl text-dark-300">
          Our wish and what we strive for is to be recognized as a professional, superior performing company whose clients and property are protected. 
        </p>
      </div>
    </div>
  </div>
  {/* Section content */}
  <div
    class="mx-auto mt-12 grid w-full justify-center gap-12 lg:mt-16 lg:max-w-screen-xl lg:grid-cols-2 lg:justify-start lg:gap-8 xl:max-w-screen-xl"
  >
    {/* Features list */}
    <div>
      {
        services.slice(0, 3).map((service, index) => (
          <div
            class:list={[
              'w-full',
              {
                'mt-8 lg:mt-5 xl:mt-8 xl:pr-18 2xl:mt-10 2xl:pr-28':
                  index === 1,
                'mt-8 lg:mt-5 xl:mt-8 2xl:mt-10': index === 2,
              },
            ]}
          >
            <div class="mx-auto max-w-lg lg:mr-auto xl:mx-auto">
              <div class="relative flex w-full rounded-3xl bg-dark-700 px-8 py-6 shadow-xl sm:px-10">
                <div class="text-center sm:flex sm:text-left">
                  <div class="w-full sm:w-1/5">
                    <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-r from-dark-800 to-dark-900 sm:mx-0">
                      <Icon name={service.icon} class="h-6 w-6 text-dark-300" />
                    </div>
                  </div>
                  <div class="mt-3 w-full sm:mt-0">
                    <h5 class="text-lg font-semibold text-white">
                      {service.label}
                    </h5>
                    <p class="mt-1 text-base text-dark-300">
                      {service.description}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    {/* Image collage */}
    <div class="flex max-w-screen-md items-center justify-center lg:max-w-full">
      <div class="grid h-full w-full grid-flow-col grid-rows-2 gap-4">
        <div class="relative row-span-2 rounded-3xl shadow-xl">
          <Image
            src={portraitImage}
            alt="Office work"
            class="h-full w-full rounded-3xl object-cover object-right"
          />
        </div>
        <div class="relative rounded-3xl shadow-xl">
          <Image
            src={squareImage1}
            alt="More office work"
            class="h-full w-full rounded-3xl object-cover object-center"
          />
        </div>
        <div class="relative rounded-3xl shadow-xl">
          <Image
            src={squareImage2}
            alt="Group brainstorming"
            class="h-full w-full rounded-3xl object-cover object-center"
          />
        </div>
      </div>
    </div>
  </div>
  {/* Section content 2 */}
  <div
    class="mx-auto mt-12 grid w-full justify-center gap-12 lg:mt-16 lg:max-w-screen-xl lg:grid-cols-2 lg:justify-start lg:gap-8 xl:max-w-screen-xl"
  >
  {/* Image collage */}
  <div class="flex max-w-screen-md items-center justify-center lg:max-w-full">
    <div class="grid h-full w-full grid-flow-col grid-rows-2 gap-4">
      
      <div class="relative rounded-3xl shadow-xl">
        <Image
          src={squareImage3}
          alt="More office work"
          class="h-full w-full rounded-3xl object-cover object-center"
        />
      </div>
      <div class="relative rounded-3xl shadow-xl">
        <Image
          src={squareImage4}
          alt="Group brainstorming"
          class="h-full w-full rounded-3xl object-cover object-center"
        />
      </div>
      <div class="relative row-span-2 rounded-3xl shadow-xl">
        <Image
          src={portraitImage2}
          alt="Office work"
          class="h-full w-full rounded-3xl object-cover object-right"
        />
      </div>
    </div>
  </div>
    {/* Features list */}
    <div>
      {
        services2.slice(0, 3).map((service, index) => (
          <div
            class:list={[
              'w-full',
              {
                'mt-8 lg:mt-5 xl:mt-8 xl:pr-18 2xl:mt-10 2xl:pr-28':
                  index === 1,
                'mt-8 lg:mt-5 xl:mt-8 2xl:mt-10': index === 2,
              },
            ]}
          >
            <div class="mx-auto max-w-lg lg:mr-auto xl:mx-auto">
              <div class="relative flex w-full rounded-3xl bg-dark-700 px-8 py-6 shadow-xl sm:px-10">
                <div class="text-center sm:flex sm:text-left">
                  <div class="w-full sm:w-1/5">
                    <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-r from-dark-800 to-dark-900 sm:mx-0">
                      <Icon name={service.icon} class="h-6 w-6 text-dark-300" />
                    </div>
                  </div>
                  <div class="mt-3 w-full sm:mt-0">
                    <h5 class="text-lg font-semibold text-white">
                      {service.label}
                    </h5>
                    <p class="mt-1 text-base text-dark-300">
                      {service.description}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    
  </div>
</section>
