      <h4 class="ml-20 mt-3 text-sm text-white">DISPATCHERS & COMMUNICATION SPACIALISTS</h4>
    </div>
    <div class="flex flex-col">
      <figure class="w-40s relative h-56">
        <Image
          src={Entertainment}
          alt="description"
          class="absolute inset-0 h-full w-full object-cover object-center"
        />
        <Icon name="box" class="absolute -bottom-8 w-16 bg-amber-300 p-2" />
      </figure>
      <h4 class="ml-20 mt-3 text-sm text-white">ENTERTEINMENT VENUES</h4>
    </div>
  </div>
</section>
