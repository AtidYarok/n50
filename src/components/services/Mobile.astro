---
import { Image } from 'astro:assets'

import bgImage1 from '@images/stock/MobileSecurityUnits.jpg'
import bg from '@images/stock/bgImg3.jpg'

const headline = 'MOBILE PATROL SERVICES'

const t1 = 'Consists of private vehicle patrol, bicycles, or golf carts that never leave your property, except for fuel and maintenance and will not be used at any other location. These units are a great way to cover grounds and ensure fast responses. The services usually operate on a 24/7 schedule, tailored to the clientâ€™s needs. Mobile patrol units will be readily identifiable and may be equipped with light bars, spotlights, microphones speakers and cell phones or radios.'

const t2 = 'National 50 Security and Investigations, Inc. will provide supervision of security officers at no additional cost to you. We shall designate supervisory personnel identified to each client and available to the client while security services are provided. Security personnel are available for the reporting to and conferring with the clients or their representatives with respect to the services being rendered. Our clients are able to contact the supervisory personnel at any time, 24 hours a day.'

---
  {/* White Section- Investigative*/}
  <section class="relative bg-white px-4 sm:px-6 md:py-40 lg:px-8 ">
    <Image
                  src={bg}
                  alt="description"
                  class="absolute inset-0 h-full w-full object-cover object-center"
                />
      
    <div class="relative mx-auto max-w-screen-md lg:max-w-screen-xl bg-white/80 p-10 rounded-2xl ">
      <div class="flex w-full justify-center">
        <h1 class="mb-16 text-3xl font-bold text-dark-900 fade-in-anim-center ">{headline}</h1>
      </div>
      {/* Project description */}
      <div class="mx-auto mt-6 w-full flex-wrap grid grid-cols-3">
        <div class="mx-auto w-full col-span-2 pr-8 ">
          <p
            class="mb-6 text-xl font-normal tracking-tight text-dark-900 lg:leading-tight fade-in-anim-center"
          >
            {t1}
          </p>
          <p
            class=" mb-6 text-xl font-normal tracking-tight text-dark-900 lg:leading-tight fade-in-anim-center"
          >
            {t2}
          </p>
        </div>
        <div
        class="relative h-64 w-full rounded-t-3xl bg-cover bg-center shadow-xl lg:h-full fade-in-anim-center">
        <Image
          src={bgImage1}
          alt="descrip"
          class="absolute inset-0 h-full w-full rounded-t-3xl object-cover object-center lg:rounded-3xl"
        />
        
      </div>
      </div>
    </div>
  </section>




<style>

  .fade-in-anim-left {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein-left;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }

  .fade-in-anim-right {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein-right;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }

  .fade-in-anim-center {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein-center;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 15% cover 60% ;
  }
  .fade-in-anim {
    view-timeline: --subjectReveal block;
    animation-timeline: --subjectReveal;
  
    animation-name: fadein;
    animation-fill-mode: both;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-range: entry 25% cover 50% ;
  }
  
  @keyframes fadein-left {
  from {
    opacity: 0;
    transform: translateX(-300px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadein-right {
  from {
    opacity: 0;
    transform: translateX(300px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadein-center {
  from {
    opacity: 0;
    transform: translateY(40px);
    
  }

  to {
    opacity: 1;
    transform: translateY(0);
    
  }
}

@keyframes fadein {
  from {
    opacity: 0;
    transform: scale(0.5);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}


  
  </style>
