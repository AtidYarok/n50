---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon'

import featureImage1 from '@images/stock/list-01.jpg'
import featureImage2 from '@images/stock/list-02.jpg'

const features = [
  {
    tagline: 'Securing Your World, Professionally and Responsibly.',
    headline: 'Comprehensive Security Solutions Tailored to Your Needs',
    text: 'National 50 Security and Investigations Inc. offers a wide array of services to its clients. Our security officers are licensed, qualified and professionals. Our officers are highly trained and provide the best security available. Our officers operate within the rules of law and within the regulations and guidelines of the Bureau of Security and Investigative Services. ',
    image: {
      src: featureImage1,
      alt: 'Three people working on table and laughing',
    },
    list: [
      { text: 'Fully uniformed, armed and unarmed Security Officers, dedicated to your specific needs' },
      { text: 'Customizable security solutions' },
      { text: 'Regular tracking & reporting, electronic and paper ' },
      { text: 'Paramedic & EMT Medical services ' },
      { text: 'Field supervisors (No additional client costs) ' },
      { text: '24 hours communications ' },
      { text: 'Investigative Services (Licensed Private Investigators) ' },
      { text: 'Camera Systems and Trained Monitoring Officers ' },
      { text: 'Trained Dispatchers and Communication Specialist ' },
      { text: 'Threat Analysis & Evaluation Experts ' },
      { text: 'Mobil Security Patrol Units' },

    ],
  },
  {
    tagline: 'Empowering Security Excellence Beyond Expectations',
    headline: 'Your Comprehensive Security Partner',
    text: 'In addition to offering armed and unarmed security officers, National 50 Security and Investigations Inc. also offers services in the following areas: ',
    image: {
      src: featureImage2,
      alt: 'Two people brainstorming on table',
    },
    list: [
      { text: 'Off Duty Police Officers ' },
      { text: 'Personal Bodyguards ' },
      { text: 'Patrol Services ' },
      { text: 'Alarm Response ' },
      { text: 'Executive Protection' },
      { text: 'K - 9 Unit' },
      { text: 'Plainclothes/Undercover Staff' },
      { text: 'Security and Other Specialized Consultations' },
      { text: 'Investigative Services ' },
      { text: 'Staffing for Special Events ' },
      { text: 'Entertainment venues ' },
      { text: 'Dispatchers and Communication Specialists' },
    ],
  },
]
---

<section class="bg-dark-800 px-4 pb-12 pt-10 sm:px-6 sm:pb-16 md:pt-12 lg:px-8">
  {/* Features container */}
  <div class="mx-auto max-w-screen-xl mt-12">
    {/* Features header */}
    <div class="mx-auto mb-32 w-full max-w-3xl text-center lg:max-w-5xl">
      <p
        class="inline-flex items-center justify-center rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700 px-6 py-2 text-sm font-medium tracking-wide text-white"
      >
      National 50 Security and Investigations Inc.
      </p>
      <h1
        class="mt-4 text-4xl font-extrabold text-white sm:text-5xl md:mt-5 md:text-6xl"
      >
      Provides supervision of security officers at no additional cost to you.
      </h1>
      <p
        class="mx-auto mt-4 max-w-lg text-xl text-dark-300 md:mt-5 md:max-w-3xl"
      >
        We shall designate supervisory personnel that will be identified to each client and available to the client anytime security services are provided and are responsible for reporting and conferring with representatives of the client with respect to the services rendered. Our clients can contact supervisory personnel at any time, 24 hours a day
      </p>
    </div>
    {
      features.map((feature, i) => (
        <div
          class:list={[
            'relative lg:grid lg:auto-rows-max lg:grid-cols-3 lg:gap-x-12',
            { 'mt-24 lg:mt-32': i % 2 === 1 },
          ]}
        >
          {/* Feature text with list */}
          <div
            class:list={[
              'flex flex-col items-center justify-center lg:items-start lg:col-span-2',
              { 'lg:order-2': i % 2 === 1 },
            ]}
          >
            <div class="w-full text-center lg:text-left">
              <p class="inline-flex items-center justify-center rounded-r-full rounded-tl-full bg-gradient-to-r from-dark-600 to-dark-700 px-6 py-2 text-sm font-medium tracking-wide text-white">
                {feature.tagline}
              </p>
            </div>
            <div class="mt-4 w-full max-w-lg text-center sm:max-w-2xl lg:mt-6 lg:text-left">
              <h3 class="text-3xl font-extrabold text-white sm:text-4xl md:text-5xl">
                {feature.headline}
              </h3>
              <p class="mx-auto mt-4 text-xl text-dark-300 lg:mt-6">
                {feature.text}
              </p>
            </div>
            <div class="mt-6 space-y-2 lg:mt-8">
              {feature.list.map((item) => (
                <div class="flex items-center text-lg text-dark-300">
                  {/* TablerIcon name: checks */}
                  <Icon name="checks" class="mr-2 h-7 w-7" />
                  {item.text}
                </div>
              ))}
            </div>
          </div>

          {/* Feature image */}
          <div
            class:list={[
              'relative mx-auto mt-10 flex w-full max-w-lg items-center justify-center lg:mt-0 lg:max-w-none',
              { 'lg:order-1': i % 2 === 1 },
            ]}
          >
            <div
              class:list={[
                'absolute h-full w-full rounded-3xl bg-dark-700  sm:top-8 lg:top-4 2xl:top-10 ',
                i % 2 === 0
                  ? 'sm:left-8 lg:left-4 2xl:left-10'
                  : 'sm:right-8 lg:right-4 2xl:right-10',
              ]}
            >
              <svg
                class="absolute inset-y-0 right-1/4 top-0 z-20 h-full w-1/4 text-dark-700"
                preserveAspectRatio="none"
                viewBox="0 0 100 100"
                fill="currentcolor"
              >
                <polygon points="0,0 100,0 0,100" />
              </svg>
              <div class="absolute inset-y-0 left-1/2 z-10 h-full w-1/2 rounded-r-3xl bg-dark-900" />
            </div>
            <Image
              src={feature.image.src}
              alt={feature.image.alt}
              class="z-30 h-full w-auto rounded-3xl object-cover shadow-xl"
            />
          </div>
        </div>
      ))
    }
  </div>
</section>
